<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_categury_item"
    android:layout_marginRight="@dimen/custom_category_item_margin_right"
    android:layout_marginLeft="@dimen/custom_category_item_margin_left"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtTabName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/custom_category_item_txt_tab_name_margin_top"
        android:layout_marginBottom="@dimen/custom_category_item_txt_tab_name_margin_bottom"
        android:layout_marginRight="@dimen/custom_category_item_txt_tab_name_margin_right"
        android:layout_marginLeft="@dimen/custom_category_item_txt_tab_name_margin_left"
        android:text="TextView"
        android:textSize="@dimen/custom_category_item_txt_tab_name_text_size"
        android:textColor="@color/white" />
    
</LinearLayout>
