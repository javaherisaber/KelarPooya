<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerHeader"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_header_height"
    android:background="@drawable/drawer_header"
    android:gravity="bottom"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtAboveHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_gravity="right"
            android:paddingBottom="@dimen/drawer_header_txt_nice_name_padding_bottom"
            android:text="Medium Text"
            android:visibility="invisible"
            android:textColor="@color/white"
            android:paddingLeft="@dimen/drawer_header_txt_nice_name_padding_left"
            android:paddingRight="@dimen/drawer_header_txt_nice_name_padding_right"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="@dimen/drawer_header_txt_nice_name_text_size" />

         <TextView
            android:id="@+id/txtBelowHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_gravity="right"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="@color/white"
            android:text="@string/LOGIN_TO_USER_ACCOUNT"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="18sp" />


    </LinearLayout>

</FrameLayout>