<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_marginRight="@dimen/custom_comment_item_margin_right"
    android:layout_marginBottom="@dimen/custom_comment_item_margin_bottom"
    android:layout_marginTop="@dimen/custom_comment_item_margin_top"
    android:layout_marginLeft="@dimen/custom_comment_item_margin_left">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/custom_comment_item_padding"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:layout_marginRight="@dimen/custom_comment_item_txt_title_margin_right"
            android:layout_gravity="right"
            android:id="@+id/txtTitle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:layout_gravity="right"
            android:gravity="right"
            android:paddingTop="@dimen/custom_comment_item_txt_comment_padding_top"
            android:paddingLeft="@dimen/custom_comment_item_txt_comment_padding_left"
            android:paddingRight="@dimen/custom_comment_item_txt_comment_padding_right"
            android:id="@+id/txtComment" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@color/monsoon"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/custom_comment_item_btn_layout_margin_top">


            <ImageView
                android:layout_width="@dimen/custom_comment_item_btn_layout_img_comment_size"
                android:layout_height="@dimen/custom_comment_item_btn_layout_img_comment_size"
                android:id="@+id/imgComment"
                android:layout_marginRight="@dimen/custom_comment_item_btn_layout_img_comment_margin_right"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_comment"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/MOHAMMAD_HOSSEIN"
                android:layout_toRightOf="@+id/imgLike"
                android:layout_toLeftOf="@+id/imgComment"
                android:layout_marginRight="@dimen/custom_comment_item_btn_layout_txt_name_margin_right"
                android:layout_centerVertical="true"
                android:id="@+id/txtName" />

            <ImageView
                android:layout_width="@dimen/custom_comment_item_btn_layout_img_like_size"
                android:layout_height="@dimen/custom_comment_item_btn_layout_img_like_size"
                android:id="@+id/imgLike"
                android:background="@drawable/background_action_selector"
                android:padding="@dimen/custom_purchase_basket_item_ribbon_btn_delete_padding"
                android:clickable="true"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/ic_dislike"
                android:layout_marginLeft="@dimen/custom_comment_item_btn_layout_img_like_margin_left"
                android:layout_centerVertical="true" />

            <ImageView
                android:layout_width="@dimen/custom_comment_item_btn_layout_img_dislike_size"
                android:layout_height="@dimen/custom_comment_item_btn_layout_img_dislike_size"
                android:id="@+id/imageView"
                android:background="@drawable/background_action_selector"
                android:padding="@dimen/custom_purchase_basket_item_ribbon_btn_delete_padding"
                android:clickable="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/custom_comment_item_btn_layout_img_dislike_margin_left"
                android:src="@mipmap/ic_like"
                android:layout_toRightOf="@+id/imgLike" />



        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
